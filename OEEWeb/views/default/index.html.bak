<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script type="text/javascript">
    //get URL arguments bij vars
    function getParameterByName(name) {
    name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
    var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
        results = regex.exec(location.search);
    return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
    }

    $( document ).ready(function() {
        //get screenwidth if no arguments are set
        var intWidth = getParameterByName('screenwidth');
        var intCountry = getParameterByName('countrynr');
        if (intWidth == 0) {
            window.location.replace("screenwidth?screenwidth=" + $(window).width());
        }
    });
</script>
{{include 'oeemenubar.html'}}
